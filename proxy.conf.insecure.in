global
  maxconn 1024

defaults
  mode http
  retries 3
  option redispatch
  timeout client 90s
  timeout server 90s
  timeout connect 90s

frontend forwarder
  bind *:%FWDPORT%
  default_backend registry

backend registry
  server kube-registry %HOST%:%PORT%
  http-request replace-value Host ^(.*):.*$ \1\:%PORT%
